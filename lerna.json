{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": false,
  "version": "0.0.1",
  "packages": [
    "."
  ],
  "command": {
    "version": {
      "allowBranch": [
        "main"
      ],
      "conventionalCommits": true,
      "exact": true
    },
    "publish": {
      "message": "chore(release): %s [ci skip]"
    }
  }
}
